            "stability": "medium"
          },
          "QhTh": {
            "role": "give_up",
            "action": "check",
            "tags": ["check_pot_control"],
            "why": "Flush draw miss 但缺乏好的 blocker。對手會用 Jx、99、88 等 bluff-catch，放棄。",
            "stability": "stable"
          }
        }
      },
      "value_river": {
        "flop": "K83r",
        "turn": "K",
        "river": "5",
        "context": {
          "board_state": "paired_board",
          "value_frequency": "thin",
          "note": "配對 K 讓 Kx 變三條。Hero 的 Kx trips 有價值，其他牌難以獲得 call。"
        },
        "hands": {
          "KQ": {
            "role": "value_bet_river",
            "action": "bet_50",
            "tags": ["high_equity", "sizing_advantage"],
            "why": "三條 K。中注從對手 full house 擔心的手牌、underpairs 獲得薄價值。",
            "stability": "stable"
          },
          "AA": {
            "role": "check_behind_river",
            "action": "check",
            "tags": ["check_pot_control"],
            "why": "Overpair 在配對 K 牌面尷尬。Bet 只被更好的牌 call，check 保留 showdown value。",
            "stability": "stable"
          }
        }
      }
    }
  }
