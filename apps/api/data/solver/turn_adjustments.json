      "conditions": ["rank <= 6", "no flush complete", "no straight complete", "no board pair"]
    },
    "overcard": {
      "description": "Card higher than all flop cards",
      "description_zh": "超牌，比翻牌所有牌都高",
      "examples": ["A on K72", "K on QJ5"]
